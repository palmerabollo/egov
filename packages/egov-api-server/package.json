{
  "name": "@egov/api-server",
  "private": true,
  "version": "1.0.0",
  "description": "eGov GraphQL API server",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./lib",
    "lint": "tslint -p .",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "test": "jest --coverage --verbose --testEnvironment node",
    "watch": "npm-run-all --parallel watch:*",
    "watch:ts": "tsc -w",
    "watch:js": "nodemon lib/index.js"
  },
  "bin": {
    "telco": "./bin/telco"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/palmerabollo/egov"
  },
  "keywords": [
    "egov",
    "api",
    "graphql"
  ],
  "author": "Guido Garc√≠a (@palmerabollo)",
  "license": "AGPL-3.0-or-later",
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "test/tsconfig.json"
      }
    }
  },
  "dependencies": {
    "@egov/data-providers": "^1.0.0",
    "apollo-server": "^2.3.1",
    "graphql": "^14.0.2",
    "lodash": "^4.17.11",
    "logops": "^2.1.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.4",
    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.119",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.4"
  }
}

{
  "name": "@egov/api-server",
  "private": true,
  "version": "1.0.0",
  "description": "eGov GraphQL API server",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -fR ./lib",
    "compile": "tsc",
    "lint": "tslint './src/**/*.ts'",
    "prepublish": "npm run build",
    "start": "npm run build && node lib/index",
    "test": "npm run build && mocha -R spec 'lib/**/*.spec.js'",
    "watch": "npm-run-all --parallel watch:*",
    "watch:ts": "tsc -w",
    "watch:js": "nodemon lib/index.js"
  },
  "bin": {
    "telco": "./bin/telco"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/palmerabollo/egov"
  },
  "keywords": [
    "api",
    "graphql"
  ],
  "author": "Guido Garc√≠a (@palmerabollo)",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "apollo-server": "^2.3.1",
    "graphql": "^14.0.2",
    "lodash": "^4.17.11",
    "@egov/data-providers": "^1.0.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.4",
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^4.5.1",
    "typescript": "^3.2.4"
  }
}

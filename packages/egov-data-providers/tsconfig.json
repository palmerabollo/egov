{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "target": "es2018",
    "sourceMap": true,
    "lib": [
      "es2018"
    ],
    "types": [
      "node"
    ]
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
